{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,

    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./svg.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}